{% extends '../common/base.twig' %}

{% block head %}
  {{ parent() }}
  <title> Create issue </title>
{% endblock %}

{% block content %}

  <div class="container">

    <h4> Add new issue </h4>
    <p> Create new issue into the system  </p>

    <form id="create" role="form" class="form-horizontal" method="post" action="/api/tickets/" >

      <div class="form-group">
        <label for="title" class="control-label col-md-2" > Title </label>
        <div class="col-md-6">
          <input id="title" name="title" type="text" class="form-control" placeholder="Insert issue title here ..." >
        </div>
      </div>

      <div class="form-group">
        <label for="description" class="control-label col-md-2" > Description </label>
        <div class="col-md-6">
          <textarea id="description" name="description" class="form-control" placeholder="Insert issue description here ..."></textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-6 col-md-offset-2">
          <button class="btn btn-primary" type="submit">Create</button>
        </div>
      </div>

    </form>

  </div>

{% endblock %}

{% block js %}
  <script src="/js/create.js" type="text/javascript" ></script>
{% endblock %}
