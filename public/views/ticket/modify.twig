{% extends '../common/base.twig' %}

{% block head %}
  {{ parent() }}
  <title> Modify Issue </title>
{% endblock %}

{% block content %}
  <div class="container" >
    <h4> Modify ticket </h4>

    <form id="modify" role="form" class="form-horizontal" method="post" action="/api/ticket/{{ item.issue }}/" >

      <div class="form-group" >
        <div class="row" >
          <label for="title" class="control-label col-md-2" > Title </label>
          <div class="col-md-10" >
            <input id="title" name="title" type="text" class="form-control" value="{{ item.title }}" >
          </div>
        </div>
      </div>

      <div class="form-group" >
        <div class="row" >
          <label for="description" class="control-label col-md-2" > Description </label>
          <div class="col-md-10" >
            <textarea id="description" name="description" class="form-control" >{{ item.description }}</textarea>
          </div>
        </div>
      </div>

      <div class="form-group" >
        <div class="row" >
          <div class="col-md-2 col-md-offset-2" >
            <button type="submit" class="btn btn-primary" > Modify </button>
          </div>
        </div>
      </div>

    </form>

    <div id="result" >
    </div>
  </div>
{% endblock %}

{% block js %}
  <script type="text/javascript" >
    var ticket = {
      issue:  {{ item.issue }},
      title:  "{{ item.title }}",
      description: "{{ item.description }}"
    };
  </script>

  <script src="/js/modify.js" type="text/javascript" ></script>
{% endblock %}
