{% extends '/common/base.twig' %}

{% block head %}
  {{ parent() }}
  <title> Insert new category </title>
{% endblock %}

{% block content %}
  <div class="container">
    <form id="insert" role="form" class="form-horizontal" method="post" action="/category/insert/" >
      <div class="row">
        <div class="form-group">
          <label for="name" class="control-label col-md-2" > Name </label>
          <div class="col-md-10" >
            <input name="name" type="text" class="form-control" placeholder="Insert category name here..." >
          </div>
        </div>
      </div>

      <div class="row" >
        <div class="form-group">
          <label for="parent" class="control-label col-md-2" > Parent </label>
          <div class="col-md-10" >
            <select name="name" class="form-control" >
              <option value="null" selected> Nobody </option>
            </select>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          <div class="col-md-2 col-md-offset-2" >
            <button type="submit" class="btn btn-primary" >Insert</button>
          </div>
        </div>
      </div>
    </form>
  </div>
{% endblock %}
